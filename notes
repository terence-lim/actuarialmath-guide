python3 -m pip install --upgrade sphinx
cd /home/terence//Dropbox/github/actuarialmat
mkdir docs
cd docs
sphinx-quickstart
# index.rstf
# conf.py
pip install sphinx_rtd_theme
make html


conf.py
-------
# Sort members by type
autodoc_member_order = 'groupwise'
import sys
sys.path.insert(0, '/home/terence/Dropbox/github/actuarialmath/src')
html_theme = 'sphinx_rtd_theme'
autodoc_default_options = {
    'special-members': '__getitem__, __call__', #'__init__, __call__',
}


# autogenerate separate *.rst files
sphinx-apidoc -e -o . /home/terence/Dropbox/github/actuarialmath/src/actuarialmath

